function noNumbers(e)   {   
	var keynum;   
	var keychar;   
	var numcheck;   
	if(window.event) {   
		keynum = e.keyCode;   
	}else if(e.which) {   
		keynum = e.which ;  
	}   
	keychar = String.fromCharCode(keynum);   
	numcheck = /[^\d]/g;   
	return !numcheck.test(keychar);   
}

