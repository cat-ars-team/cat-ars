*//**
 * 绉婚櫎鏁扮粍鍐呯浉鍚岀殑鍏冪礌
 * @param data 鏁扮粍
 * @return data 澶勭悊杩囩殑鏁扮粍
 *//*
function unique(data){
    data = data || [];
    var a = {};
    for (var i=0; i<data.length; i++) {
        var v = data[i];
        if (typeof(a[v]) == 'undefined'){
            a[v] = 1;
        }
    };
    data.length=0;
    for (var i in a){
        data[data.length] = i;
    }
    return data;
}


